<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.bilac.tcm.cidadeiluminada" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".protocolos.ProtocoloActivity"
            android:label="@string/title_activity_protocolo"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.bilac.tcm.cidadeiluminada.MainActivity" />
        </activity>
        <activity
            android:name=".ConfigureActivity"
            android:label="@string/title_activity_configure"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.bilac.tcm.cidadeiluminada.MainActivity" />
        </activity>
        <activity
            android:name=".protocolos.ProtocolosListaActivity"
            android:label="@string/title_activity_protocolos_lista"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.bilac.tcm.cidadeiluminada.MainActivity" />
        </activity>
    </application>

</manifest>
